<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.csf.app1.Activities.AutoDetailActivity"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/autoImage2"
        android:layout_width="260dp"
        android:layout_height="260dp"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/delete_card" />

    <EditText
        android:text="Marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoMarca2"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoPrecio" />

    <EditText
        android:text="Modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoModel2"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintHorizontal_bias="0.501"
        fresco:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:text="Precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoPrecio"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoModel2"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/update_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Update"
        fresco:layout_constraintRight_toLeftOf="@+id/autoMarca2"
        fresco:layout_constraintTop_toBottomOf="@+id/autoMarca2" />

    <Button
        android:id="@+id/delete_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="Delete"
        fresco:layout_constraintLeft_toRightOf="@+id/autoMarca2"
        fresco:layout_constraintTop_toBottomOf="@+id/autoMarca2" />

</android.support.constraint.ConstraintLayout>