<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.csf.app1.Activities.AutoDetailActivity"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/autoImage"
        android:layout_width="260dp"
        android:layout_height="260dp"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoPuertas" />

    <TextView
        android:text="Marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoMarca"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        fresco:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoModel"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoMarca"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:text="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoColor"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoModel"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:text="AÃ±o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoAnio"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoColor"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:text="Puertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoPuertas"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/autoAnio"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>